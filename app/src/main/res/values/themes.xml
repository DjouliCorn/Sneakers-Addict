<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Sneaker_addict" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/orange_app</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="23">@color/white</item>
        <item name="android:windowLightStatusBar">true</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="button_orange" parent="Theme.Sneaker_addict">
        <item name="backgroundTint">@color/orange</item>
    </style>

    <style name="styleSheetTry" parent="Theme.Sneaker_addict">
        <item name="backgroundTint">@color/orange_app</item>
        <item name="android:paddingLeft">40dp</item>
        <item name="android:paddingRight">40dp</item>
        <item name="android:fontFamily">@font/poppins_regular</item>
    </style>


    <!--remove the status bar and change the text color into black color-->
    <style name="Theme.Sneaker_addict.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <!--title of the homepage -->
    <style name="titre_accueil">
        <item name="android:fontFamily">@font/poppins_regular</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="nom_artiste_accueil">
        <item name="android:fontFamily">@font/mulish_light</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="text_accueil">
        <item name="android:fontFamily">@font/mulish_light</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="prix_accueil">
        <item name="android:fontFamily">@font/mulish_regular</item>
        <item name="android:textSize">15sp</item>
    </style>

    <style name="text_explication_accueil">
        <item name="android:fontFamily">@font/mulish_bold</item>
        <item name="android:textSize">10sp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="accueil_style_btn_rs">
        <item name="android:layout_width">30dp</item>
        <item name="android:layout_height">30dp</item>
        <item name="android:layout_margin">10dp</item>
    </style>




</resources>