<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:scaleType="centerInside"
    tools:context=".activities.MainActivity">

    <ImageView
        android:id="@+id/img_logo_register"
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:layout_centerHorizontal="false"
        android:layout_centerVertical="false"
        android:layout_marginTop="100dp"
        android:src="@drawable/sneakers_addict_logo" />

    <RelativeLayout
        android:id="@+id/layout_register"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/img_logo_register"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp">

        <EditText
            android:id="@+id/register_username"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Username"
            android:layout_marginBottom="20dp"
            android:fontFamily="@font/poppins_regular"/>

        <EditText
            android:id="@+id/register_mail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/register_username"
            android:hint="Mail"
            android:inputType="textEmailAddress"
            android:layout_marginBottom="20dp"
            android:fontFamily="@font/poppins_regular"/>

        <EditText
            android:id="@+id/register_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/register_mail"
            android:inputType="textPassword"
            android:hint="Password"
            android:fontFamily="@font/poppins_regular"/>

        <Button
            android:id="@+id/button_Inscription"
            style="@style/button_orange"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/register_password"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:text="Inscription"
            />

    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/layout_already"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/layout_register"
        android:layout_marginTop="20dp"
        android:layout_marginRight="30dp"
        android:layout_marginLeft="30dp">

        <TextView
            android:id="@+id/text_already"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Déjà enregistré?"
            android:fontFamily="@font/poppins_regular"/>

        <TextView
            android:id="@+id/text_retour_login"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/text_already"
            android:text="Retour Login"
            android:fontFamily="@font/poppins_bold"/>
    </RelativeLayout>

</RelativeLayout>