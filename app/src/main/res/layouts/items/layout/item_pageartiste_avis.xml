<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardUseCompatPadding="true"
        android:layout_marginTop="5dp"
        app:cardElevation="5dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/pageArtiste_imgPhotoClient"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:scaleType="centerCrop"
                    app:srcCompat="@mipmap/ic_launcher" />

                <LinearLayout
                    android:layout_width="270dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginStart="10dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/pageArtiste_nomClient"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/mulish_bold"
                        android:text="Jeff Lambda"
                        android:textSize="15sp" />

                    <RatingBar
                        android:id="@+id/layout_nb_etoile"
                        style="?android:attr/ratingBarStyleSmall"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:rating="4"
                        android:theme="@style/RatingBar" />

                    <TextView
                        android:id="@+id/pageArtiste_avisClient"
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:fontFamily="@font/mulish_regular"
                        android:text="Au top, super rapide, un travail précis pour un résultat canon ! Je tweete direct..."
                        android:textSize="12sp"
                        tools:ignore="SmallSp" />

                </LinearLayout>

            </LinearLayout>

            <TextView
                android:id="@+id/pageArtiste_dateAvis"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="11sp"
                android:layout_alignParentEnd="true"
                android:text="17/04/2021"
                android:layout_marginEnd="45dp"
                android:layout_marginTop="10dp"
                tools:ignore="SmallSp" />

        </RelativeLayout>

    </androidx.cardview.widget.CardView>

</RelativeLayout>