<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="170dp"
    android:layout_height="wrap_content"
    android:layout_margin="10dp">

    <RelativeLayout
        android:id="@+id/layout_backgroundcard"
        android:layout_width="170dp"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/artiste_image"
            android:layout_width="match_parent"
            android:layout_height="206dp"
            android:src="@drawable/artiste1"/>

        <LinearLayout
            android:id="@+id/layout_nom_et_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/artiste_image">


        <TextView
            android:id="@+id/nom_artiste"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/nom_artiste_sneakyboy"
            android:layout_marginStart="5dp"
            android:textSize="12sp"/>

        <Button
            android:id="@+id/button_voirplus"
            android:layout_width="62dp"
            android:layout_height="30dp"
            android:text="@string/voir_plus"
            android:textColor="@color/black"
            android:textSize="8sp"
            android:padding="0dp"
            android:layout_marginStart="40dp"
            tools:ignore="SmallSp" />

        </LinearLayout>

    </RelativeLayout>

</androidx.cardview.widget.CardView>